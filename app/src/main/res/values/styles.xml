<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_button_selector_primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="title_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:textSize">@dimen/font_xxxlarge</item>
    </style>

    <style name="title_textView.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="title_textView.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="normal_textView" parent="title_textView">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="normal_textView.Gray">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="normal_textView.Black">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="small_textView" parent="title_textView">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="small_textView.Gray">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="CustomButtonTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
    </style>


    <style name="normal_imageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="primary_custom_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textAppearance">@style/CustomButtonTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="primary_medium_custom_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
