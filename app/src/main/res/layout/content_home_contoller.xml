<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sumitthakur.wission.ui.home.HomeContollerActivity"
    tools:showIn="@layout/app_bar_home_contoller">


    <!--<include layout="@layout/toolbar_app" />-->


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etSearchField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rectangle_filled_white"
        android:drawablePadding="@dimen/spacing_normal"
        android:ellipsize="end"
        android:hint="@string/search"
        android:padding="@dimen/spacing_normal"
        android:scrollHorizontally="true" />

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:src="@drawable/ic_search_black_24dp" />


    <!--<com.blundell.tut.ui.widget.VideosListView-->
    <!--android:id="@+id/videosListView"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="fill_parent" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvVideos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spacing_tiny" />


</android.support.v7.widget.LinearLayoutCompat>